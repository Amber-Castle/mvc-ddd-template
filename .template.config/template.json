  
{
  "$schema": "http://json.schemastore.org/template",
  "author": "MagistrTNT@gmail.com",
  "classifications": [ "Solution/MVC" ], 
  "name": "DDD solution MVC",
  "identity": "ddd-mvc",         
  "groupIdentity":"DDD",
  "shortName": "ddd-mvc",
  "tags": {
    "language": "C#",
    "type":"project"
  },
  "sourceName": "SolutionTemplate",
  "preferNameDirectory": true,
  "symbols":{
    "copyrightName": {
      "type": "parameter",
      "defaultValue": "John Smith",
      "replaces":"Contoso"
    },
    "title": {
      "type": "parameter",
      "defaultValue": "Hello World from dotnet new",
      "replaces":"Hello World"
    }
  },
   "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "build.bat",
            "clear.bat",
            "clear-cache.bat",
            "clear-obj.bat",
            "LICENSE",
            "qwe.bat",
            "register.bat", 
            "restore.bat",
            "run.bat",
            "unregister.bat", 
            ".git/",
            ".github/",
            "**/wwwroot/**", 
            "**/bin/**", 
            "**/obj/**", 
            "**/.vs/**", 
            "**/_ReSharper.Caches/**" ]
        }
      ]
    }
  ]
}